			post.data.tags.forEach((tag: string) => {
				allTags.add(tag.toLowerCase().replace(/\s+/g, '-'));
			});
		}
	});

	return Array.from(allTags).map(tag => ({
		params: { tag },
	}));
}) satisfies GetStaticPaths;

